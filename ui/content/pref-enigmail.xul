<?xml-stylesheet href="chrome://communicator/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://enigmail/skin/enigmail.css" type="text/css"?> 

<!DOCTYPE window [
<!ENTITY % brandDTD SYSTEM "chrome://global/locale/brand.dtd" >
%brandDTD;
<!ENTITY % enigMailDTD SYSTEM "chrome://enigmail/locale/enigmail.dtd" >
%enigMailDTD;
]>
<page id="enigmailPrefs"
        headertitle="&enigmail.label;"
        xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        class="color-dialog"
        orient="vertical"
        onload="init_pref_enigmail();">

  <script type="application/x-javascript" src="chrome://enigmail/content/enigmailCommon.js"/>
  <script type="application/x-javascript" src="chrome://enigmail/content/pref-enigmail.js"/>
  <script type="application/x-javascript" src="chrome://enigmail/content/pref-enigmail-adv.js"/>

  <script type="application/x-javascript">
  <![CDATA[
    // List of persisted elements (required to save prefs)
    var _elementIDs = [
                       ///"autoCrypto",
                       "userIdValue",
                       "userIdFromAddr",
                       "noPassphrase",
                       "enigmail_defaultEncryptionOption",
                       "enigmail_recipientsSelectionOption",
                       "enigmail_maxIdleMinutes"
                       ];
  ]]>
  </script>

<!--
    <checkbox id="autoCrypto"
            label="&enigmail.autoCrypto.label;"
            pref="true"
            preftype="bool"
            prefstring="extensions.enigmail.autoCrypto"
            prefattribute="checked"
            oncommand="setDisables(false);"/>
-->

    <hbox>
      <label control="userIdValue"
             value="&enigmail.userIdValue.label;:" />

      <textbox id="userIdValue"
               pref="true"
               preftype="string"
               prefstring="extensions.enigmail.userIdValue" />
    </hbox>

    <vbox>
      <checkbox id="userIdFromAddr"
              label="&enigmail.userIdFromAddr.label;"
              pref="true"
              preftype="bool"
              prefstring="extensions.enigmail.userIdFromAddr"
              prefattribute="checked"/>

      <checkbox id="noPassphrase"
              label="&enigmail.userNoPassphrase.label;"
              pref="true"
              preftype="bool"
              prefstring="extensions.enigmail.noPassphrase"
              prefattribute="checked"/>
    </vbox>

    <groupbox orient="vertical">
      <caption label="&enigmail.defaultEncryptionOption.label;"/>

      <radiogroup id="enigmail_defaultEncryptionOption"
                  value="1"
                  prefstring="extensions.enigmail.defaultEncryptionOption">

        <radio id="defaultEncryptionNone"
               value="0"
               label="&enigmail.defaultEncryptionNone.label;"
               oncommand="setDisables(false);"/>

        <radio id="defaultEncryptionOnly"
               value="1"
               label="&enigmail.defaultEncryptionOnly.label;" 
               oncommand="setDisables(false);"/>

        <radio id="defaultEncryptionSign"
               value="2"
               label="&enigmail.defaultEncryptionSign.label;" 
               oncommand="setDisables(false);"/>
       </radiogroup>
    </groupbox>
    
    <groupbox  orient="vertical">
       <caption label="&enigmail.recipientsSelectionOption.label;"/>
       <radiogroup id="enigmail_recipientsSelectionOption"
                  value="1"
                  prefstring="extensions.enigmail.recipientsSelectionOption">

        <radio id="askRecipientsNever"
               value="0"
               label="&enigmail.askRecipientsNever.label;"
               oncommand="setDisables(false);"/>

        <radio id="askRecipientsClever"
               value="1"
               label="&enigmail.askRecipientsClever.label;" 
               oncommand="setDisables(false);"/>

        <radio id="askRecipientsNever"
               value="2"
               label="&enigmail.askRecipientsAlways.label;" 
               oncommand="setDisables(false);"/>
       </radiogroup>
    </groupbox>
    
    <hbox autostretch="never">
      <label control="enigmail_maxIdleMinutes"
             value="&enigmail.maxIdleMinutesHead.label;" />

      <textbox id="enigmail_maxIdleMinutes"
              size="4"
              pref="true"
              preftype="int"
              prefstring="extensions.enigmail.maxIdleMinutes"/>

      <description>&enigmail.maxIdleMinutesTail.label;</description>

    </hbox>

    <separator/>

    <hbox autostretch="never" halign="right">
      <button class="dialog"
              id="advancedPrefs"
              label="&enigmail.advancedPrefsButton.label;"
              oncommand="EnigAdvPrefWindow();" />

      <button class="dialog"
              id="resetPrefs"
              label="&enigmail.resetPrefsButton.label;"
              oncommand="enigmailResetPrefs();"
              />

      <button class="dialog"
              id="prefsHelp"
              label="&enigmail.prefsHelpButton.label;"
              oncommand="EnigHelpWindow();" />

    </hbox>

    <groupbox orient="horizontal">
      <button class="dialog"
              id="uninstall"
              label="&enigmail.uninstallButton.label;"
              oncommand="EnigUninstall();"
              />

      <button class="dialog"
              id="upgrade"
              label="&enigmail.upgradeButton.label;"
              oncommand="EnigUpgrade();"
              />
    </groupbox>

</page>
